<style>
body{
    background-color: #141414;
    color: #BDBDBD;
    font-family:  Arial;
    overflow-x: hidden;
}
.grid-item span{
    margin-left: 10px;
    font-size: large;
}
::-webkit-scrollbar {
  width: 0px;
  height: 0px;
}
.bookflix-body-form {
    position: relative;
    z-index: 2;
    width: 100%;
    height:100%;
    padding:4px;
}
</style>

<%= render partial: '/books/ext/navstart' %>
                <div class="bookflix-body-form">
                    <div class="container pt-6">
                     <div class="is-half is-offset-one-quarter">

                     <div class="container is-half mt-1">
                     <div class="columns is-centered pt-4 mb-3">
                       <div class="column is-half  pt-4 pb-2 box">
                         <%= form_with(model: @book, local: true) do |f| %>
                           <div class="field">
                             <%= f.label :title, class: 'label' %>
                             <div class="control">
                               <%= f.text_field :title, class: 'input' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :author, class: 'label' %>
                             <div class="control">
                               <%= f.text_field :author, class: 'input' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :published_date, class: 'label' %>
                             <div class="control">
                               <%= f.text_field :published_date, class: 'input' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :genre, class: 'label' %>
                             <div class="control">
                               <%= f.text_field :genre, class: 'input' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :publisher, class: 'label' %>
                             <div class="control">
                               <%= f.text_field :publisher, class: 'input' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :isbn, class: 'label' %>
                             <div class="control">
                               <%= f.text_field :isbn, class: 'input' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :description, class: 'label' %>
                             <div class="control">
                               <%= f.text_area :description, class: 'textarea' %>
                             </div>
                           </div>
                           <div class="field">
                             <%= f.label :cover_image_url, class: 'label' %>
                             <div class="control">
                               <%= f.text_area :cover_image_url, class: 'input' %>
                             </div>
                           </div>
                           <div class="field is-grouped">
                             <div class="control">
                               <%= f.submit "Add", class: 'button is-primary' %>
                             </div>
                           </div>
                         <% end %>
                       </div>
                     </div>
                   </div>      




                     </div>
                    </div>
                </div>
<%= render partial: '/books/ext/navend' %>